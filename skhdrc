# toggle layout
ctrl - y : yabai -m space --layout $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "float" else "bsp" end')
ctrl - q : yabai -m window --toggle float

# focus window
ctrl - h : yabai -m window --focus west
ctrl - j : yabai -m window --focus south
ctrl - k : yabai -m window --focus north
ctrl - l : yabai -m window --focus east

# swap windows
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - l : yabai -m window --warp east

# resize window
ctrl + cmd - h : yabai -m query --windows --window west && yabai -m window --resize left:-20:0 || \
                 yabai -m query --windows --window east && yabai -m window --resize right:-20:0
ctrl + cmd - j : yabai -m query --windows --window north && yabai -m window --resize top:0:20 || \
                 yabai -m query --windows --window south && yabai -m window --resize bottom:0:20
ctrl + cmd - k : yabai -m query --windows --window north && yabai -m window --resize top:0:-20 || \
                 yabai -m query --windows --window south && yabai -m window --resize bottom:0:-20
ctrl + cmd - l : yabai -m query --windows --window west && yabai -m window --resize left:20:0 || \
                 yabai -m query --windows --window east && yabai -m window --resize right:20:0

# highlight window
ctrl - f : yabai -m window --toggle float && yabai -m window --grid 6:6:1:1:4:4

# fullscreen zoom
ctrl + shift - f : yabai -m window --toggle zoom-fullscreen

# Launch apps
ctrl + cmd - i : app_id=$(yabai -m query --windows | jq '.[] | select(.app | contains("iTerm")) | .id') && \
           test -n "${app_id}" && yabai -m window --focus "${app_id}" || /Applications/iTerm.app/Contents/MacOS/iTerm2
ctrl + cmd - o : app_id=$(yabai -m query --windows | jq '.[] | select(.app | contains("Arc")) | .id') && \
           test -n "${app_id}" && yabai -m window --focus "${app_id}" || /Applications/Arc.app/Contents/MacOS/Arc

